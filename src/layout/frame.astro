<style>
    *{
        margin: 10px;
    }
  footer {
    background: linear-gradient(90deg, #6f4b91 14%, #553176 55%, #2b0f44 100%);
    margin: 0px
  }
  .pages h3{
    margin-top: -10px;
    margin-bottom: 2px
  }
  .grid_1-2-2{
    display: grid;
    grid-template-columns: 1fr 2fr 2fr;
    margin: 0px
  }
  footer img{
width: 50%;
height: auto;
margin: auto;
  }
.SoMe img{
    width: 30%;
    height: auto;
}
.SoMe{
    display: flex;
    flex-wrap: wrap;
    flex-direction: row-reverse;
    margin: 0px;
}
#insta{
    width: 30%;
    height: auto;
}
#facebook{
    width: 20%;
    height: auto
}
.icons{
    display: flex;
}
</style>
