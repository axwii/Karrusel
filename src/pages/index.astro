---
import "../styles/global.css";
import Frame from "../layout/frame.astro";
import Countdown from "../components/Countdown.astro";
import Artist from "../components/ArtistListCard.astro";
---

<Frame pageTitle="Karrusel - home">
  <div id="home">
    <img src="/images/forside.jpg" />
    <div id="cta_container">
      <a href="https://www.ticketmaster.dk/artist/karrusel-billetter/1013437#events"><button>Buy tickets</button></a>
      <a href="/about"><button>About us</button></a>
    </div>
    <h1>We are ready in...</h1>
    <Countdown />
    <div class="artist_grid">
      <Artist name="Anna Logic" imgPath="/images/anna.webp" link="/artist" />
      <Artist name="HAAi" imgPath="/images/haai.webp" link="/artist" />
      <Artist name="Narciss" imgPath="/images/narciss.webp" link="/artist" />
    </div>
    <a href="/lineup"><button>Lineup</button></a>
  </div>
</Frame>

<style>
  #home {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
  }
  button{
    padding: 10px 20px;
    margin: 10px;
    border: none;
    background-color: #000;
    color: #fff;
    cursor: pointer;
  }

  @media (min-width: 800px) {
    .artist_grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-gap: 20px;
      margin-left: 20px;
      margin-right: 20px;
    }
  }
</style>
