---
import "../styles/global.css";
import Frame from "../layout/frame.astro";
---

<Frame pageTitle="Lineup">
  <h1>LINEUP</h1>
  <h2>This is the complete lineup for Karrusel 2024</h2>

  <div class="filter-container">
    <button class="filter">Thursday</button>
    <button class="filter">Friday</button>
    <button class="filter">Saturday</button>
  </div>

  <div class="artist_grid">
    <div class="artist">
      <img src="https://i.ibb.co/0hSZbyX/anna.webp" alt="" />
      <h2>Anna Logic</h2>
    </div>

    <div class="artist">
      <img src="https://i.ibb.co/fNZJV1T/haai.webp" alt="" />
      <h2>HAAi</h2>
    </div>

    <div class="artist">
      <img src="https://i.ibb.co/1bnX6QG/narciss.webp" alt="" />
      <h2>Narciss</h2>
    </div>

    <div class="artist">
      <img src="https://i.ibb.co/0CfG8ZT/mira.webp" alt="" />
      <h2>Mira</h2>
    </div>

    <div class="artist">
      <img src="https://i.ibb.co/ZhKPSz4/fjaak.webp" alt="" />
      <h2>FJAAK</h2>
    </div>

    <div class="artist">
      <img src="https://i.ibb.co/smmCzcf/spfdj.webp" alt="" />
      <h2>SPFDJ</h2>
    </div>
  </div>
</Frame>

<img src="../" alt="" />

<style>
  .filter {
    background-color: #d44402;
    padding: 10px 50px;
    border-radius: 40px;
    margin: 5px;
    cursor: pointer;
  }

  .filter-container {
    text-align: center;
    margin-bottom: 20px;
  }

  h1 {
    text-align: center;
    margin-top: 20px;
  }

  h2 {
    text-align: center;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  @media (min-width: 800px) {
    .artist_grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-gap: 20px;
      margin-left: 20px;
      margin-right: 20px;
    }

    .artist {
      text-align: center;
    }
  }
</style>
