---
const {soundcloudId} = Astro.props;
---

<div class="iframe">
    <p class="ok">Listen</p>
    <iframe width="100%" height="123" scrolling="no" frameborder="no" allow="autoplay"
src={`https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/${soundcloudId}`}>
</iframe>
</div>

